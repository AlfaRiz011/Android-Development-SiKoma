<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.SiKoma" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/blueSecondary</item>
        <item name="android:colorBackground">@color/whitePrimary</item>
        <item name="colorPrimary">@color/blueSecondary</item>
        <item name="colorSurface">@color/blueSecondary</item>
        <item name="colorOnPrimary">@color/whitePrimary</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="Theme.SiKoma" parent="Base.Theme.SiKoma" />

    <style name="Theme.SiKoma.ApparOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/blueSecondary</item>
        <item name="colorOnPrimary">@color/whitePrimary</item>
    </style>

    <style name="CustomActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/whitePrimary</item>
    </style>
</resources>